{
  "name": "codex-wordmap",
  "displayName": "codex-wordmap",
  "description": "Brings TranslationCore's word alignment dialog to codex using the boosted wordmap prediction engine.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onNotebook:codex-type",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codex-wordmap.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "codex-wordmap.wordmap",
        "title": "Run Wordmap"
      },
      {
        "title": "Import USFM",
        "shortTitle": "Import USFM",
        "command": "codex-editor-extension.importUsfm"
      },
      {
        "title": "Export USFM",
        "shortTitle": "Export USFM",
        "command": "codex-editor-extension.exportUsfm"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "proskomma-core": "^0.10.9",
    "proskomma-json-tools": "^0.8.16",
    "wordmap": "^0.6.0",
    "wordmap-lexer": "^0.3.6"
  }
}
